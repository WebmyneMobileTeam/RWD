
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@+id/txtTripComplete"
        android:id="@+id/scrolledDetials"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">



            <com.webmyne.riteway_driver.customViews.CustomHeaderView
                android:id="@+id/paymentInfo"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:customTypeface="@string/bold"
                android:layout_marginBottom="@dimen/activity_margin"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="@dimen/activity_margin"
                app:titleText="TRIP RECEIPT"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:paddingTop="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_back"
                    android:orientation="vertical">
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Payment"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/txtPaymentType"
                            android:layout_weight="2"
                            android:paddingLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="Payment Type"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:background="@drawable/header_back"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Name"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="Mr. XYZ"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Pickup"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="Pickup Location"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Dropoff"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="Dropoff Location"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Distance"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="1.07 kms"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Date"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="January 7, 2014"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Fare"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="100$"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"

                            android:text="Tip"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"

                            android:text="2$"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/normal"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>





                    <LinearLayout
                        android:paddingLeft="@dimen/activity_margin"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"

                            android:text="Fee"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />
                        <RelativeLayout
                            android:layout_marginLeft="-8dp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="2$"
                                android:layout_toLeftOf="@+id/txtTotalAmount"
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                app:customTypeface="@string/normal"
                                tools:ignore="MissingPrefix"

                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_size_medium"/>


                            <TextView

                                android:id="@+id/txtTotalAmount"
                                android:text="TOTAL:  $ 104"
                                android:padding="8dp"
                                android:layout_toLeftOf="@+id/totalAmountRightDivider"
                                android:layout_marginRight="-1dp"
                                android:background="@drawable/header_back"
                                android:layout_width="wrap_content"
                                app:customTypeface="@string/bold"
                                tools:ignore="MissingPrefix"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_green_dark"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/totalAmountRightDivider"
                                android:layout_alignParentRight="true"
                                android:layout_width="4dp"
                                android:layout_alignBottom="@+id/txtTotalAmount"
                                android:padding="8dp"
                                android:layout_height="match_parent"
                                android:background="@color/actionbar"
                                ></TextView>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout >
            </com.webmyne.riteway_driver.customViews.CustomHeaderView>
            <com.webmyne.riteway_driver.customViews.CustomHeaderView
                android:id="@+id/customerInfo"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:customTypeface="@string/bold"
                android:layout_marginBottom="@dimen/activity_margin"
                tools:ignore="MissingPrefix"
                android:layout_marginTop="@dimen/activity_margin"
                app:titleText="CUSTOMER FEEDBACK"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:paddingTop="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_back"
                    android:orientation="vertical">
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Ratings"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="3.5"
                            android:layout_toLeftOf="@+id/txtTripDateAndTime"
                            android:layout_alignParentLeft="true"
                            android:layout_width="0dp"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"

                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />


                    </LinearLayout>

                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RatingBar
                        android:layout_gravity="center"
                        android:rating="3.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="@dimen/activity_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_weight="1"
                            android:hint="Comments"
                            android:padding="4dp"
                            android:layout_width="0dp"
                            android:gravity="top|left"
                            app:customTypeface="@string/light"
                            tools:ignore="MissingPrefix"
                            android:minLines="3"
                            android:maxLines="4"
                            android:background="@drawable/header_back"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_medium" />


                    </LinearLayout>
                </LinearLayout>


            </com.webmyne.riteway_driver.customViews.CustomHeaderView>
        </LinearLayout>
    </ScrollView>

        <TextView
            android:id="@+id/txtTripComplete"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:customTypeface="@string/bold"
            tools:ignore="MissingPrefix"
            android:text="DONE"
            android:background="@color/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

</RelativeLayout>