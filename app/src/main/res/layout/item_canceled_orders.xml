<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/orderCanceledDate"
            android:paddingLeft="@dimen/activity_margin"

            android:id="@+id/orderCanceledCname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            app:customTypeface="@string/bold"
            tools:ignore="MissingPrefix"
            android:text="Customer Name"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_margin"
            android:layout_centerVertical="true"
            android:id="@+id/orderCanceledDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:customTypeface="@string/light"
            tools:ignore="MissingPrefix"
            android:text="21-10-14  6:00pm"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_small"
            />

    </RelativeLayout>



    <TextView
        android:paddingRight="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:id="@+id/orderCanceledPickupLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTypeface="@string/normal"
        android:singleLine="true"
        tools:ignore="MissingPrefix"
        android:text="Pickup Location"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@android:color/black"/>
    <TextView
        android:paddingRight="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:id="@+id/orderCanceledDropoffLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:customTypeface="@string/normal"
        tools:ignore="MissingPrefix"
        android:text="Dropoff Location"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@android:color/black"/>
    <TextView
        android:paddingRight="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:id="@+id/orderCanceledStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTypeface="@string/normal"
        tools:ignore="MissingPrefix"
        android:singleLine="true"
        android:text="Status: Canceled By Driver"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@android:color/black"/>

    <TextView
        android:paddingRight="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:id="@+id/currentOrderFareAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customTypeface="@string/normal"
        tools:ignore="MissingPrefix"
        android:singleLine="true"
        android:text="$250.00"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@android:color/darker_gray"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp"/>
</LinearLayout>